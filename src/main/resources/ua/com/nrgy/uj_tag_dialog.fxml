<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.com.nrgy.controller.UjTagController">
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Új tag rögzítése" />

    <GridPane hgap="15.0" vgap="12.0">
        <columnConstraints>
            <ColumnConstraints minWidth="100.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Teljes név:" GridPane.rowIndex="0" />
        <TextField fx:id="nevField" promptText="pl. Kiss János" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Születési idő:" GridPane.rowIndex="1" />
        <DatePicker fx:id="szulIdoPicker" maxWidth="Infinity" promptText="Válasszon dátumot" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Születési hely:" GridPane.rowIndex="2" />
        <TextField fx:id="szulHelyField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Lakcím:" GridPane.rowIndex="3" />
        <TextField fx:id="lakcimField" promptText="Város, utca, házszám" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Telefonszám:" GridPane.rowIndex="4" />
        <TextField fx:id="telField" promptText="+36..." GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="EFJ befizetve:" GridPane.rowIndex="5" />
        <CheckBox fx:id="efjCheckBox" text="Igen" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Presbiter:" GridPane.rowIndex="6" />
        <ComboBox fx:id="presbiterComboBox" maxWidth="Infinity" promptText="Válasszon presbitert..." GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <Separator />

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleMegse" text="Mégse" />
        <Button onAction="#handleMentes" styleClass="accent" text="Mentés" />
    </HBox>
</VBox>