<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="700.0" prefWidth="1000.0" spacing="0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.com.nrgy.controller.ExportController">
    <VBox prefWidth="300.0" spacing="20.0" style="-fx-background-color: -color-bg-subtle; -fx-padding: 25; -fx-border-color: -color-border-default; -fx-border-width: 0 1 0 0;">
        <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Exportálás Beállításai" />
            <Separator />

            <VBox spacing="10.0">
                <Label style="-fx-font-weight: bold;" text="Formátum:" />
                <HBox spacing="10.0">
                    <ToggleButton fx:id="pdfToggle" maxWidth="Infinity" selected="true" text="PDF" HBox.hgrow="ALWAYS" />
                    <ToggleButton fx:id="excelToggle" maxWidth="Infinity" text="Excel" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

            <VBox spacing="10.0">
                <Label style="-fx-font-weight: bold;" text="Tartalom:" />
                <Button maxWidth="Infinity" onAction="#handleOszlopValaszto" text="Oszlopok válogatása..." />
                <Label fx:id="oszlopStatusz" style="-fx-font-size: 11px;" textFill="GRAY" />
            </VBox>

            <VBox spacing="10.0">
                <Label style="-fx-font-weight: bold;" text="Megjelenés:" />
                <Button maxWidth="Infinity" onAction="#handleOldalBeallitasok" text="Oldalbeállítások..." />
                <Label fx:id="beallitasStatusz" style="-fx-font-size: 11px;" textFill="GRAY" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" onAction="#handleExport" prefHeight="50.0" styleClass="accent" text="Mentés és Bezárás" />
        </children>
    </VBox>

    <StackPane style="-fx-background-color: #525659;" HBox.hgrow="ALWAYS">
        <children>
            <ScrollPane fitToHeight="false" fitToWidth="false" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
                <content>
                    <VBox alignment="CENTER" fillWidth="false" spacing="20" style="-fx-padding: 40;">
                        <children>
                            <VBox fx:id="paperSheet" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 15, 0, 0, 5); -fx-alignment: TOP_CENTER;">
                                <padding>
                                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                                </padding>
                            </VBox>
                        </children>
                    </VBox>
                </content>
            </ScrollPane>
        </children>
    </StackPane>
</HBox>